        // AIç›¸è«‡å‡¦ç†
        function simulateAI() {
            const input = document.getElementById('userInput').value;
            if (!input) return alert("å†…å®¹ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„");

            const sendBtn = document.querySelector('.send-btn');
